                 Maximum power     : 1200 hp equivalent power at 2000 output rpm for take-off
                 Pressure ratio    : 6.3:1
 
 
 gear-ratio="0.66"
  -->
  <propeller x="5.61035" y="0.0" z="-0.40130"
             mass="270" 
             moment="73.211" 
             radius="1.35"
             cruise-speed="270" 
             cruise-rpm="1500"
             cruise-power="1000" 
             cruise-alt="19000"
             min-rpm="150" 
             max-rpm="2200"
             fine-stop="0.25" 
             coarse-stop="3">
             <actionpt x="6.72862" y="0.0" z="-0.40130"/>
             <control-input axis="/controls/engines/engine[0]/propeller-pitch" control="ADVANCE"/>
             <turbine-engine eng-power="1200" 
                             eng-rpm="2000" 
                             alt="19000"
                             flat-rating="1200"
                             n2-low-idle="32"
                             n2-high-idle="65"
                             n2-max="100"
                             bsfc="0.35"
                             compression="8.7">
                             <control-input axis="/controls/engines/engine[0]/condition" control="CONDLEVER"/>
                             <control-input axis="/controls/engines/engine[0]/throttle" control="THROTTLE"/>
             </turbine-engine>
  </propeller>
  
  <!-- Noze wheel -->
  <gear x="4.68439" y="0" z="-2.02835" 
        compression="0.15" 
        spring="0.8"
        on-solid="1"
        sfric="1"
        dfric="1">
        <control-input axis="/controls/flight/rudder" control="STEER" square="false"/>
        <control-input axis="/controls/gear/gear-down" control="EXTEND"/>
        
        <control-output control="EXTEND" prop="/gear/gear[0]/position-norm"/>
        
        <control-speed control="EXTEND" transition-time="7"/>
  </gear>

  <!-- Left wheel -->
  <gear x="1.22521" y="-2.24719" z="-2.11304"
