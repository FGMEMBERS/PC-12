<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>aoa.ac</path>

  <animation>
    <object-name>AOA.fond</object-name>
    <object-name>AOA.buttons</object-name>
    <object-name>AOA.face</object-name>
    <object-name>AOA.needle</object-name>

    <object-name>AOA.vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/PC-12/Models/Effects/Glass/glass</inherits-from>
    <object-name>AOA.vitre</object-name>
  </effect>
  
  <animation>
    <type>material</type>
    <object-name>AOA.face</object-name>
    <object-name>AOA.needle</object-name>
    <condition>
      <property>/controls/lighting/instrument-lights</property>
    </condition>
    <emission>
      <!-- <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop> -->
      <red>   0.80 </red>
      <green> 0.6 </green>
      <blue>  0.4 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>AOA.needle</object-name>
    <property>orientation/alpha-deg</property>
    <interpolation>
      <entry><ind>  0 </ind><dep>   0.0 </dep></entry>
      <entry><ind> 14 </ind><dep> 226.5 </dep></entry>
    </interpolation>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>
