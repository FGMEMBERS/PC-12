<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <sim include="Nasal/views.xml">

    <description>Pilatus PC12/47 (YASim)</description>
    <author>BARANGER Emmanuel (3D/FDM)</author>
    <aircraft-version>0.1</aircraft-version>
    <status>early production</status>

    <fuel-fraction>1.0</fuel-fraction>

    <startup>
      <splash-texture>Aircraft/PC-12/pc12-splash.png</splash-texture>
    </startup>

    <sound>
      <path archive="y">Aircraft/PC-12/Sounds/pc12-sound.xml</path>
    </sound>

    <model>
      <path archive="y">Aircraft/PC-12/Models/pc12.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>

    <flaps>
        <setting> 0.00 </setting> <!-- Cruise -->
        <setting> 0.10 </setting> <!--   Base -->
        <setting> 0.50 </setting> <!--   Half -->
        <setting> 1.00 </setting> <!--   Full -->
    </flaps>

    <multiplay>
      <chat_display>1</chat_display>
      <generic> 
        <int type="int" n="0">  0 </int>                                      <!-- 0 immat -->
        <int type="int" n="1">  0 </int>                                      <!-- 1 immat -->
        <int type="int" n="2">  0 </int>                                      <!-- 2 immat -->
        <int type="int" n="3">  0 </int>                                      <!-- 3 immat -->
        <int type="int" n="4">  0 </int>                                      <!-- 4 immat -->
        <int type="int" n="5">  0 </int>                                      <!-- 5 immat -->
        <int type="bool" n="6"> 1 </int>                                      <!-- 6 smoke/bomb/torpedo -->
        <int type="int" n="7">  0 </int>                                      <!-- 7 color -->
        <int n="8" alias="/systems/electrical/outputs/nav-lights">  0 </int>  <!-- 8 nav-lights -->
        <int n="9" alias="/sim/model/lights/beacon/state">  false </int>      <!-- 9 strobe-lights -->
        <int n="10" alias="/controls/electric/key-pos">  0 </int>             <!-- 10 key position -->
        <float n="0" alias="/instrumentation/doors/crew/position-norm"/>
        <float n="1" alias="/instrumentation/doors/passenger/position-norm"/>  
        <float n="2" alias="/position/gear-agl-m">  0 </float>                <!-- 11 altitude for MP shadow -->
        <string n="9" type="string" />                                        <!-- string[9] reserved for bombable mode -->
      </generic>
    </multiplay>

    <help>
      <title>Pilatus PC12/47</title>
      <line>______________________________________________</line>
      <key>
        <name>d</name>
        <desc>Open/Close crew door</desc>
      </key>
      <key>
        <name>D</name>
        <desc>Open/Close cargo door</desc>
      </key>
    </help>

    <pc12>
      <state type="int"> 0 </state>
      <airspeed-kmh type="float"> 0 </airspeed-kmh>
      <engine-rpm type="float"> 0 </engine-rpm>
      <engine-volume-low-rpm type="float"> 0 </engine-volume-low-rpm>
      <engine-volume-high-rpm type="float"> 0 </engine-volume-high-rpm>
    </pc12>

    <weight n="0">
      <name>Pilot</name>
      <weight-lb>180</weight-lb>
      <max-lb>240</max-lb>
      <min-lb>140</min-lb>
    </weight>

    <weight n="1">
      <name>Pax</name>
      <weight-lb>0</weight-lb>
      <max-lb>240</max-lb>
      <min-lb>0</min-lb>
    </weight>

    <weight n="2">
      <name>Baggage</name>
      <weight-lb>0</weight-lb>
      <max-lb>20</max-lb>
      <min-lb>0</min-lb>
    </weight>

    <menubar include="Dialogs/pc12-menu.xml"/>

  </sim>

  <input>
    <keyboard include="Nasal/pc12-keyboard.xml"/>
  </input>

  <engines>
    <engine>
      <rpm type="float"> 0 </rpm>
    </engine>
  </engines>

  <instrumentation>
    <radar>
      <enabled type="bool">true</enabled>
      <az-field type="double">120</az-field>
      <range type="double">160</range>
      <range-selected type="double">40</range-selected>
      <display-rdr type="bool">true</display-rdr>
      <radar-standby type="int">0</radar-standby>
      <mode>
        <rws type="bool">true</rws>
        <tws-auto type="bool">false</tws-auto>
      </mode>
    </radar>
    <radar2>
      <sweep-width-m type="double">0.0844</sweep-width-m>
      <range-width-m type="double">0.0846</range-width-m>
      <radius-ppi-display-m type="double">0.0846</radius-ppi-display-m>
      <hud-eye-dist-m type="double">0.766</hud-eye-dist-m>
      <hud-radius-m type="double">0.071</hud-radius-m>
      <hud-vertical-offset-m type="double">-0.025</hud-vertical-offset-m>
    </radar2>
    <rwr>
      <display-lighting-intens type="double">0.4</display-lighting-intens>
      <symbology-lighting-intens type="double">1</symbology-lighting-intens>
    </rwr>
    <ecm>
      <on-off type="bool">true</on-off>
    </ecm>
  </instrumentation>

  <nasal>
    <doors>
      <file>Aircraft/PC-12/Nasal/doors.nas</file>
    </doors>
    <pc12>
      <file>Aircraft/PC-12/Nasal/liveries.nas</file>
      <file>Aircraft/PC-12/Nasal/light.nas</file>
    </pc12>
    <radar>
      <file>Aircraft/Instruments-3d/radar2/radar2.nas</file>
    </radar>
    <radardist>
      <file>Aircraft/Instruments-3d/radardist/radardist.nas</file>
    </radardist>
    <rwr>
      <file>Aircraft/PC-12/Models/Interior/Panel/Instruments/rwr/rwr.nas</file>
    </rwr>
  </nasal>

</PropertyList>
